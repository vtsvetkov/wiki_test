<h1>Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Vendor name</th>
      <th>Vendor description</th>
      <th>Vendor rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= image_tag vendor.image.url(:medium) %></td>
        <td><%= vendor.vendor_name %></td>
        <td><%= vendor.vendor_description %></td>
        <td><%= vendor.vendor_rating %></td>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor', new_vendor_path %>
